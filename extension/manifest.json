{
  "manifest_version": 3,
  "name": "PhishDetector Pro", 
  "version": "3.1", 
  "description": "My phishing detector for Gmail - helps spot fake emails!", 
  "permissions": ["scripting", "storage"], 
  "host_permissions": ["http://127.0.0.1:5001/*", "https://mail.google.com/*"], 
  "action": {"default_popup": "popup.html", "default_icon": "logo.svg"}, 
  "icons": {"16": "logo.svg", "48": "logo.svg", "128": "logo.svg"}, 
  "background": {"service_worker": "background.js"}, 
  "content_scripts": [{"matches": ["https://mail.google.com/*"], 
    "js": ["content.js"]}], 
  "web_accessible_resources": [{"resources": ["logo.svg"], "matches": ["https://mail.google.com/*"]}]
}
